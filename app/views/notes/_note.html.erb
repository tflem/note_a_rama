<div class="note">
  <%= link_to note.name, note_path(note) %>
  <div class="note__actions">
    <%= button_to "Delete Note",
                  note_path(note),
                  method: :delete,
                  class: "btn btn--light" %>
    <%= link_to "Edit Note",
                edit_note_path(note),
                class: "btn btn--light" %>
  </div>
</div>