<%= turbo_frame_tag note do %>
  <div class="note">
    <%= link_to note.name,
        note_path(note),
        data: { turbo_frame: "_top" } %>
    <div class="note__actions">
      <%= button_to "Delete Note",
                    note_path(note),
                    method: :delete,
                    class: "btn btn--light" %>
      <%= link_to "Edit Note",
                  edit_note_path(note),
                  class: "btn btn--light" %>
    </div>
  </div>
<% end %>